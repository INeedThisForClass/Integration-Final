package integrationproject;

public class BasicEncryption extends Encryption {

	private boolean debug  = false; //Three or more different data types (1)
	
	public String encrypt(String message) {
		String encryptedMessage = ""; //Three or more different data types (1)
		for (int i = 0; i < message.length(); i++) {
			char current = message.charAt(i); //Three or more different data types (1)
			if (current != ' ')
				current += (char)key; //Manipulate primitive numeric data and string data
			encryptedMessage += current;
		}
		if (debug)inspect(encryptedMessage);
		return encryptedMessage;
	}

	public String decrypt(String message) {
		String decryptedMessage = "";
		for (int i = 0; i < message.length(); i++) {
			char current = message.charAt(i); //Manipulate text using methods of the String class
			if (current != ' ') current -= (char)key; //Use casting without losing precision
			decryptedMessage += current;
		}
		if (debug)inspect(decryptedMessage);
		return decryptedMessage;
	}

	public void setDebug(boolean debug) {
		this.debug = debug;
		if (debug)System.out.println("debug mode has been enabled!");
		else System.out.println("debug mode has been disabled!");
	}

	public boolean getDebug() {
		return debug;
	}
}
